<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Export Scheduler-->
    <record id="automatic_daily_export" model="ir.cron" forcecreate="True" >
        <field name="name">Automatic Daily Export</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="nextcall" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-01 00:00:00')"/>
        <field name="model_id" ref="model_automatic_export"/>
        <field name="code">model.run_export_cron('daily')</field>
        <field name="state">code</field>
        <field name="active" eval="False"/>
    </record>
    <record id="automatic_weekly_export" model="ir.cron" forcecreate="True" >
        <field name="name">Automatic Weekly Export</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="nextcall" eval="(datetime.now() + relativedelta(weeks=1)).strftime('%Y-%m-01 00:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="advanced_automatic_export.model_automatic_export"/>
        <field name="code">model.run_export_cron('weekly')</field>
        <field name="state">code</field>
        <field name="active" eval="False" />
    </record>

    <record id="automatic_monthly_export" model="ir.cron" forcecreate="True" >
        <field name="name">Automatic Monthly Export</field>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="nextcall" eval="(datetime.now() + relativedelta(months=1)).strftime('%Y-%m-01 00:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="advanced_automatic_export.model_automatic_export"/>
        <field name="code">model.run_export_cron('monthly')</field>
        <field name="state">code</field>
        <field name="active" eval="False" />
    </record>
</odoo>
