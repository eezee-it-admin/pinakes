<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="microsoft_account_tree" model="ir.ui.view">
        <field name="name">microsoft.account.outlook.tree</field>
        <field name="model">microsoft.account.outlook</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="microsoft_account_form" model="ir.ui.view">
        <field name="name">microsoft.account.outlook.form</field>
        <field name="model">microsoft.account.outlook</field>
        <field name="arch" type="xml">
            <form string="Microsoft Account for outlook">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" />
                        </h1>
                    </div>
                    
                    <group>
                        <field name="client_id"/>
                        <field name="client_secret" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_microsoft_account" model="ir.actions.act_window">
        <field name="name">Microsoft Accounts for outlook</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">microsoft.account.outlook</field>
    </record>

    <menuitem name="Microsoft Accounts for outlook"
            id="menu_microsoft_account"
            parent="base.menu_email"
            action="action_microsoft_account"
            sequence="8"/>
</odoo>
