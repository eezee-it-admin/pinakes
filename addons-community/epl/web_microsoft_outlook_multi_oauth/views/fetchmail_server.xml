<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fetchmail_server_view_form" model="ir.ui.view">
        <field name="name">fetchmail.server.view.form.inherit.outlook</field>
        <field name="model">fetchmail.server</field>
        <field name="priority">1000</field>
         <field name="inherit_id" ref="microsoft_outlook.fetchmail_server_view_form"/>
        <field name="arch" type="xml">
            <field name="is_microsoft_outlook_configured" position="after">
                <field name="microsoft_account_id"
                    attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('server_type', '!=', 'outlook')]}"/>
            </field>
        </field>
    </record>
</odoo>
