<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_mail_server_view_form" model="ir.ui.view">
        <field name="name">ir.mail_server.view.form.inherit.outlook</field>
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="microsoft_outlook.ir_mail_server_view_form"/>
        <field name="arch" type="xml">
             <field name="is_microsoft_outlook_configured" position="after">
                <field attrs="{'invisible': [('is_microsoft_outlook_configured', '=', False), ('server_type', '!=', 'outlook')]}" name="microsoft_account_id" />
            </field>
        </field>
    </record>
</odoo>
