<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.web.recaptcha</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="recaptcha" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="ms_team_meetings">
                    <div class="o_setting_left_pane">
                        <field name="module_event_team_meetings"/>
                    </div>
                    <div class="o_setting_right_pane" id="ms_team_meetings_settings">
                        <label for="module_event_team_meetings"/>
                        <div class="text-muted">
                            Create Microsoft Team Meetings from Events.
                        </div>
                        <div attrs="{'invisible': [('module_event_team_meetings', '=', False)]}">
                            <div class="content-group mt16">
                                <label for="ms_client_id" class="o_light_label"/>
                                <field name="ms_client_id" style="width: 100%;"/>
                            </div>
                            <div class="content-group">
                                <label for="ms_client_secret" class="o_light_label"/>
                                <field name="ms_client_secret" style="width: 100%;"/>
                            </div>
                            <div class="content-group">
                                <label for="ms_auth_base_url" class="o_light_label"/>
                                <field name="ms_auth_base_url" style="width: 100%;"/>
                            </div>
                            <div class="content-group">
                                <label for="ms_access_token_url" class="o_light_label"/>
                                <field name="ms_access_token_url" style="width: 100%;"/>
                            </div>
                            <div class="content-group">
                                <label for="ms_request_token_url" class="o_light_label"/>
                                <field name="ms_request_token_url" style="width: 100%;"/>
                            </div>
                            <div>
                                <a href="https://portal.azure.com/#blade/Microsoft_AAD_IAM/ActiveDirectoryMenuBlade/Overview"
                                   class="oe_link" target="_blank">
                                    <i class="fa fa-arrow-right"/> Get Application ID and generate secret key
                                </a>
                            </div>
                        </div>
                        <div class="col-md-10" align="center">
                            <button string="Authenticate" type="object"
                                    name="action_authenticate"
                                    style="margin-right: 5px;"
                                    class="oe_highlight" icon="fa-plug"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
