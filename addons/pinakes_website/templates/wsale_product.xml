<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product_tags" inherit_id="website_sale.product">
        <xpath expr="//section[@id='product_detail']" position="inside">
            <div class="row">
                <div class="col-12 d-inline-flex">
                    <t t-foreach="product.product_tag_ids" t-as="tag">
                        <a href="/shop?filter_by_tag_id=#{tag.id}">
                            <span class="badge mr4 bg-secondary" style="cursor: pointer;">
                                <t t-esc="tag.name"/>
                            </span>
                        </a>
                    </t>
                </div>
            </div>
            <h2 class="mt-4">Ook interessant</h2>
            <div class="mt-4"/>
            <div class="row mt-4">
                <t t-foreach="product.similar_products" t-as="similar_product">
                    <t t-if="similar_product and similar_product.website_published">

                        <div class="col-md-4">
                            <div class="row mb-2">

                                <div class="col-md-4">
                                    <t t-if="similar_product.image_1920">
                                        <img t-att-src="'/web/image/product.template/' + str(similar_product.id) + '/image_1920'"
                                             style="width: 100px; max-height: 200px;"/>
                                    </t>
                                </div>
                                <div class="col-md-6">
                                    <h5>
                                        <t t-esc="similar_product.name"/>
                                    </h5>
                                    <br/>
                                    <a t-attf-href="/shop/#{similar_product.id}">
                                        Bestel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
