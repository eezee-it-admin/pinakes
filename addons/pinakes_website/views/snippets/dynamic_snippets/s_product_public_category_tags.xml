<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="s_product_public_category_tags" name="Rubriek labels">
        <section class="text-center">
            <h3>Category Title</h3>
            <div>
                <t t-set="tags" t-value="env['product.public.category.tag'].search([])"/>
                <t t-foreach="tags" t-as="tag">
                    <p><t t-esc="tag.name"/></p>
                </t>
            </div>
        </section>
    </template>
</odoo>
