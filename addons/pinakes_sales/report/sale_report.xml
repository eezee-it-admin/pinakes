<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_order_product_search_inherit_pinakes" model="ir.ui.view">
        <field name="name">view.order.product.search.inherit.pinakes</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='company']" position="after">
                <!--<filter string="Publication Types" name="publication" context="{'group_by':'publication_type_id'}"/>-->
                <filter string="Type of Products" name="type_product" context="{'group_by':'product_type_id'}"/>
                <filter string="Product Imprint" name="product_imprint" context="{'group_by':'imprint_id'}"/>
                <filter string="Product Fonds" name="product_fonds" context="{'group_by':'fonds_id'}"/>
                <filter string="Product Subtype" name="product_subtype" context="{'group_by':'subtype_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>
