<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']//field[@name='invoice_status']" position="after">
                <field name="auto_exported" readonly="1"/>
                <field name="auto_sent_time" readonly="1"/>
            </xpath>
             <xpath expr="//page[@name='other_information']//field[@name='reference']" position="attributes">
                   <attribute name="attrs"> {'invisible': []}</attribute>
                   <attribute name="readonly">0</attribute>
              </xpath>
        </field>
    </record>

    <record id="sale_subscription_inherit_pin_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.pin</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='prepare_upsell_order']" position="attributes">
                <attribute name="string">New Publication</attribute>
            </xpath>
        </field>
    </record>

</odoo>
