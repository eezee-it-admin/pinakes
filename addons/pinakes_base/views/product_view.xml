<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pinakes_product_normal_form" model="ir.ui.view">
        <field name="name">pinakes.product.normal.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="id"/>
                <field name="detailed_type" string="Product Variant Type"/>
            </field>
            <field name="currency_id" position="before">
                <field name="isbn"/>
                <field name="issn"/>
                <field name="doi"/>
                <field name="company_code" invisible="1"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Reporting" name="reporting"
                      attrs="{'invisible': [('company_code', '=', 'pinakes')]}">
                    <group>
                        <group>
                            <field name="publication_lang" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_pinakes_product_variant_easy_edit_view" model="ir.ui.view">
        <field name="name">pinakes.product.normal.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="before">
                 <field name="detailed_type" string="Product Variant Type"/>
            </field>
        </field>
    </record>

    <record id="view_pinakes_product_kanban" model="ir.ui.view">
        <field name="name">pinakes.product.kanban</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//small[@t-if='record.default_code.value']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//small[@t-if='record.default_code.value']" position="after">
                <br/>
                <small t-if="record.default_code.value">
                    Internal Reference: [<field name="default_code"/>]
                    <br/>
                    ID: <field name="id"/>
                </small>
            </xpath>
        </field>
    </record>

    <record id="view_pinakes_product_tree" model="ir.ui.view">
        <field name="name">pinakes.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="id"/>
                <field name="detailed_type" string="Product Variant Type"/>
            </field>
        </field>
    </record>

</odoo>
