<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pinakes_product_template_view_form" model="ir.ui.view">
        <field name="name">pinakes.product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="general_information" position="inside">
                <group string="Ebook Values" name="epub_values">
                    <field name="epub_name"/>
                    <field name="epub_file"/>
                </group>
            </page>
            <field name="product_tag_ids" position="after">
                <field name="url_digitale_bib"/>
            </field>
        </field>
    </record>
</odoo>
